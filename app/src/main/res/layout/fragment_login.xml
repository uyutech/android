<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="@drawable/login_con_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/login_field_bg">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/login_phone"
            android:layout_gravity="center"/>
        <net.xiguo.test.widget.EditTextWithClear
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="24dp"
            android:id="@+id/userName"
            android:hint="@string/loginabelUsername"
            android:gravity="center_vertical"
            android:textColor="@color/loginBg"
            android:textColorHint="@color/loginHint"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="phone"
            android:digits="@string/phoneNum"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/login_field_bg">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/login_pass"
            android:layout_gravity="center"/>
        <net.xiguo.test.widget.EditTextWithClear
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/userPass"
            android:hint="@string/loginabelUserpass"
            android:gravity="center_vertical"
            android:textColor="@color/loginBg"
            android:textColorHint="@color/loginHint"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:maxLength="16"
            android:inputType="textPassword"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/switchShowPass"
            android:src="@drawable/pass_visible"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/forgetPass"
        android:text="@string/forgetPass"
        android:textColor="@color/loginBg"
        android:textSize="13sp"
        android:layout_gravity="right"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/login"
        android:enabled="false"
        android:text="@string/loginButton"
        android:textColor="@drawable/login_button_color"
        android:textSize="15sp"
        android:background="@drawable/login_button_bg"/>
</LinearLayout>
