<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:paddingTop="3sp"
        android:background="#0E6DB0"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/followIcon"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:background="#00000000"
                android:src="@drawable/tab_menu_follow_icon" />
            <TextView
                android:id="@+id/followTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/follow"
                android:textColor="@drawable/tab_menu_follow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zhuanquan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/zhuanquanIcon"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:background="#00000000"
                android:src="@drawable/tab_menu_follow_icon" />
            <TextView
                android:id="@+id/zhuanquanTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/zhuanquan"
                android:textColor="@drawable/tab_menu_follow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/findIcon"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:background="#00000000"
                android:src="@drawable/tab_menu_follow_icon" />
            <TextView
                android:id="@+id/findTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/find"
                android:textColor="@drawable/tab_menu_follow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/myIcon"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:background="#00000000"
                android:src="@drawable/tab_menu_follow_icon" />
            <TextView
                android:id="@+id/myTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/my"
                android:textColor="@drawable/tab_menu_follow" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
